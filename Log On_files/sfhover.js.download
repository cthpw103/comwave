if (window.ie){
    window.addEvent('load',function(){
        $$('.leftnavmenu ul li').each(function(el){
            el.addEvent('mouseover', function(){ el.addClass('sfhover');});
            el.addEvent('mouseout',  function(){ el.removeClass('sfhover');});
        });
    });
}